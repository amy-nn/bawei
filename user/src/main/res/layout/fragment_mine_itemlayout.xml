<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="我的收藏"
        android:drawableTop="@mipmap/personal_mine_icon_collection_32"
        android:gravity="center"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="我的订单"
        android:drawableTop="@mipmap/personal_mine_icon_order_32"
        android:gravity="center"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="我的历史"
        android:drawableTop="@mipmap/personal_mine_icon_history_32"
        android:gravity="center"/>


</LinearLayout>