<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/logoutLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/showImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@mipmap/image_login_user_icon"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/userText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="马蜂窝用户"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_edit_l" 
                android:layout_toRightOf="@+id/userText"/>
            <TextView
                android:id="@+id/level1.1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="L1.1"
                android:layout_below="@+id/userText"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text="开通会员"
                android:layout_toRightOf="@+id/level1.1"
                android:layout_alignTop="@+id/level1.1"/>
        </RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/zero1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注"
            android:layout_below="@+id/zero1"
            android:layout_alignLeft="@id/zero1"
            />
        <TextView
            android:id="@+id/zero2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_toRightOf="@id/zero1"
            android:paddingLeft="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zero2"
            android:layout_alignRight="@id/zero2"
            android:layout_marginTop="0dp"
            android:text="粉丝" />
        <TextView
            android:id="@+id/zero3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_toRightOf="@id/zero2"
            android:paddingLeft="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="访客"
            android:layout_below="@id/zero3"
            android:layout_alignRight="@id/zero3"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开通金卡享受旅游专属权益,还可以体验会员"/>
    </LinearLayout>

</LinearLayout>